<% include partials/header %>

<form class="auth" action="/login" method="POST">
    <h1 class="text-light">Login</h1>

    <div class="form-group">
        <label for="InputEmail1">Email address</label>
        <input type="text" name="new[username]" required class="form-control" id="InputEmail"
            aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input required name="new[password]" type="password" class="form-control" id="password" placeholder="Password">

    </div>
    <div class="btnGrp">
        <button type="submit" class="btn btn-primary">Submit</button>

        <span class="float-right"> not registered? <a href="/register">click here to sign up!</a></span>
    </div>

</form>


