<% include ../partials/header %>


<form class="container mt-5" action="/to-do" method="POST">
    <div class="form-group">
        <input maxlength="70" class="form-control" id="title" type="text" required="true" name="new[title]"
            placeholder="title">
        <small class="text-light">Titles can be up to 70 characters</small>
    </div>
    <div class="form-group">
        <label class="text-light" for="description">Description</label>
        <textarea maxlength="1000" id="description" class="form-control" name="new[description]"></textarea>
    </div>
    <div class="form-group">
        <label for="priority" class="text-light">Add a priority </label>
        <a href="#">
            <i class="fa fa-question-circle infoLink"></i>
        </a>
        <br />
        <select id="priority" name="new[priority]">
            <option>Whenever</option>
            <option>Must do</option>
            <option>Should do </option>
            <option>Would be nice</option>
        </select>
    </div>
    <button class="btn btn-success">Add!</button>
</form>
<% include ../partials/footer %>